/* Global defaults */
* {
  font: "JetBrainsMono Nerd Font 11";
  blur: true;
  padding: 10px;
  background-color: transparent;
  border-radius: 0px;  // remove default rounding globally
}

/* ── Window ──────────────────────────────── */
window {
  width: 750px;
  height: 625px;
  location: center;
  blur: true;
  border: 0px;
  border-radius: 0px;
  border-color: #000000;
  background-color: #000000;  // let Hyprland handle opacity
  padding: 0px;
  margin: 30px 50px;
}

/* ── Layout ──────────────────────────────── */
mainbox {
  orientation: horizontal;
  children: [ "borderbox" ];
  spacing: 0px;
  padding: 0px;
}

borderbox {
  orientation: horizontal;
  children: [ "imagebox", "contentbox" ];
  padding: 0px;
  spacing: 0px;
  border-radius: 0px;
}

contentbox {
  orientation: vertical;
  children: [ "entry", "listview" ];
  spacing: 0px;
  padding: 0px;
  expand: true;
}

/* ── Imagebox ────────────────────────────── */
imagebox {
  background-image: url("~/.config/rofi/image.jpg");
  background-repeat: false;
  size: 300px 625px;
}

/* ── Elements ────────────────────────────── */
element {
  border-radius: 0px;
}

element-text, element-icon {
  padding: 6px 8px;
  spacing: 2px;
  text-color: #ffffff;
}

element selected {
  background-color: #000000;
  text-color: #ffffff;
  border-radius: 0px;
}

/* ── Input & Prompt ──────────────────────── */
prompt {
  enabled: false;
  background-color: #000000;
  text-color: #ffffff;
  padding: 5px 10px;
}

entry {
  padding: 8px;
  expand: false;
  font: "JetBrainsMono Nerd Font 12";
  text-color: #ffffff;
  border-radius: 0px 3px 0px 0px;
  background-color: #000000;  // input field
}

/* ── Listview ────────────────────────────── */
listview {
  lines: 1;
  background-color: rgba(1, 1, 1, 1); // solid background inside blur
  border-radius: 0px 0px 3px 0px;
  padding: 5px;
}

